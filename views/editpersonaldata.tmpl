<form class='userData' method="POST">
    <h3>Личные данные</h3>

    <label class="userData__label">
        <span class="userData__title">Логин:</span>
        <input type="text" name="login" value="{{ data.login_pa }}">
    </label>
    <label class="userData__label">
        <span class="userData__title">Имя:</span>
        <input type="text" name="name" value="{{ data.name_pa }}">
    </label>
    <label class="userData__label">
        <span class="userData__title">E-mail:</span>
        <input type="email" name="email" value="{{ data.email_pa }}">
    </label>
    <label class="userData__label">
        <span class="userData__title">Пароль:</span>
        <input type="password" autocomplete="new-password" class="{{error?:null}}" name="pas1" value="{{  null }}">
    </label>
    <label class="userData__label">
        <span class="userData__title">Пароль:</span>
        <input type="password" autocomplete="new-password" class="{{error?:null}}" name="pas2" value="{{ null }}">
    </label>
    <label class="userData__label">
        <span class="userData__title">Телефон:</span>
        <input type="tel" name="phone" value="{{ data.phone_pa }}">
    </label>
    <button type="submit" class="userData__btnEdit" name="persAreaSave"> Сохранить </button>
</form>